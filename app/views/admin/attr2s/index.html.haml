#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b 
          Attr2s:
          = Attr2.count
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New Attr2', new_admin_attr2_path, class: 'btn btn-xs btn-success'
        %p
        %table#table1
          %tbody
            - @attr2s.each do |attr2|
              %tr
                %td= attr2.name
                %td= link_to '', edit_admin_attr2_path(attr2), class: 'btn2edit'
                %td= link_to '', [:admin, attr2], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'
%br
