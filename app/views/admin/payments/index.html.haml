#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b
          Payments:
          = Payment.count
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New Payment', new_admin_payment_path, class: 'btn btn-xs btn-success'
        %p
        %table#table1
          %thead
            %tr
              %th Guest
              %th enrollment
              %th Amount
              %th Office
              %th
              %th

          %tbody
            - @payments.each do |payment|
              %tr
                /%td= payment.guest
                %td= payment.enrollment.guest
                %td= payment.enrollment
                %td= payment.amount
                %td= payment.office
                %td= link_to '', edit_admin_payment_path(payment), class: 'btn2edit'
                %td= link_to '', [:admin, payment], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'
%br
