#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b
          Total cash collected:
          = CashCollection.sum(:amount)
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New Cash collection', new_admin_cash_collection_path, class: 'btn btn-success btn-xs'
        %p
        %table#table1
          %thead
            %tr
              %th Amount
              %th Office
              %th Admin
              %th Created at
              %th
          %tbody
            - @cash_collections.each do |cash_collection|
              %tr
                %td= cash_collection.amount
                %td= cash_collection.office
                %td= cash_collection.admin
                %td= cash_collection.created_at
                %td= link_to '', [:admin, cash_collection], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'

%br
