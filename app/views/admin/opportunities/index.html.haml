#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b
          Opportunities:
          = Opportunity.count
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New Opportunity', new_admin_opportunity_path, class: 'btn btn-xs btn-success'
        %p
        %table#table1
          %thead
            %tr
              %th Service
              %th Event group
              %th Client
              %th Responsible user
              %th Coupon
              %th Opp status
              %th Used
              %th Paid
              %th To pay
              %th
              %th
              %th

          %tbody
            - @opportunities.each do |opportunity|
              %tr
                %td= opportunity.event_group
                %td= opportunity.event_group.service
                %td= link_to opportunity.guest, admin_guest_path(opportunity.guest), :style=>'color: blue;'
                %td= link_to opportunity.user, admin_user_path(opportunity.user), :style=>'color: blue;'
                %td= opportunity.coupon
                %td= opportunity.opp_status
                %td
                %td
                %td
                %td= link_to '', [:admin, opportunity], class: 'btn1search'
                %td= link_to '', edit_admin_opportunity_path(opportunity), class: 'btn2edit'
                %td= link_to '', [:admin, opportunity], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'
%br
