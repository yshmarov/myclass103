  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseComment"}
            %b Comments
      #collapseComment.panel-collapse.collapse.in
        .panel-body
          = simple_form_for [:admin, @comment] do |f|
            = f.input :guest_id, input_html: {value: @guest.id}, as: :hidden
            .input-group
              = f.input :text, placeholder: "New comment", label: false
              %span.input-group-btn
                = f.button :submit, 'add'
          %p
          %table#table1
            %tbody
              - @comments.each do |comment|
                %tr
                  %td= comment.text
                  %td= link_to '', [:admin, comment], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'
.col-md-8
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseOpp"}
            %b My purchases
      #collapseOpp.panel-collapse.collapse.in
        .panel-body
          %table#table1
            Groups
            %thead
              %tr
                %th Name
                %th Description
                %th Price
            %tbody
              - @event_groups.each do |event_group|
                %tr
                  %td= event_group
                  %td= event_group.service
                  %td= event_group.attendances.count
                  /%td= event_group.tot
                  /%td= event_group.attendances.sum(:duepayment)
          %p
          Opportunities
          %table#table1
            %thead
              %tr
                %th Opp ID
                %th Created at
                %th Service
                %th Event group
                %th Client
                %th Full Price
                %th Paid?(opp status)
                %th I used
                %th Return
                %th
                %th
                %th

            %tbody
              - @guest.opportunities.each do |opportunity|
                %tr
                  %td= opportunity.id
                  %td= opportunity.created_at.to_time
                  %td= opportunity.created_at
                  %td= opportunity.event_group.service
                  %td= opportunity.event_group
                  %td= opportunity.guest
                  %td= opportunity.event_group.service.totalprice
                  %td= opportunity.opp_status
                  %td= opportunity.event_group.events.count #currently shows how many attendances by ALL USERS
                  %td= opportunity.event_group.attendances.count #currently shows how many attendances by ALL USERS
                  %td
                    /full_price-I_used
                  %td= link_to 'Show', [:admin, opportunity]
                  %td= link_to 'Edit', edit_admin_opportunity_path(opportunity)
                  %td= link_to 'Destroy', [:admin, opportunity], :method => :delete, :data => { :confirm => 'Are you sure?' }
