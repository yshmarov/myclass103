#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b 
          Attr1s:
          = Attr1.count
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New Attr1', new_admin_attr1_path, class: 'btn btn-xs btn-success'
        %p
        %table#table1
          %tbody
            - @attr1s.each do |attr1|
              %tr
                %td= attr1.name
                %td= link_to '', edit_admin_attr1_path(attr1), class: 'btn2edit'
                %td= link_to '', [:admin, attr1], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'
%br
