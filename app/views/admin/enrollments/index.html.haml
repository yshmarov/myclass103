#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b
          Enrollments:
          = Enrollment.count
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New enrollment', new_admin_enrollment_path, class: 'btn btn-xs btn-success'
        %p
        %table#table1
          %thead
            %tr
              %th Service
              %th Event group
              %th Client
              %th Responsible user
              /%th Coupon
              /%th Opp status
              %th Used
              %th Paid
              %th To pay
              %th
              %th
              %th

          %tbody
            - @enrollments.each do |enrollment|
              %tr
                %td= enrollment.event_group
                %td= enrollment.event_group.service
                %td= link_to enrollment.guest, admin_guest_path(enrollment.guest), :style=>'color: blue;'
                %td= link_to enrollment.user, admin_user_path(enrollment.user), :style=>'color: blue;'
                /%td= enrollment.coupon
                /%td= enrollment.opp_status
                %td
                %td
                %td
                %td= link_to '', [:admin, enrollment], class: 'btn1search'
                %td= link_to '', edit_admin_enrollment_path(enrollment), class: 'btn2edit'
                %td= link_to '', [:admin, enrollment], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn3del'
%br
