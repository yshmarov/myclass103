- set_var 'events', @events.map{|e| {title: e.room.office.name  + " " + e.room.name + " " + e.user.to_s, start: e.starts_at, end: e.ends_at, url: edit_admin_event_path(e)}}
.col-md-4
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseOne"}
            %b Group info
      #collapseOne.panel-collapse.collapse.in
        .panel-body
          .text-center
            = link_to '', edit_admin_event_group_path(@event_group), class: 'btn2b'
            = link_to 'All groups', admin_event_groups_path, class: "btn btn-default"
          %p.h4
            %b Group id:
            = @event_group.name
          %p
            %b Status:
            = @event_group.status
          %p
            %b Service:
            = @event_group.service
          %p
            %b Price of 1 lesson:
            = @event_group.service.gprice
          %p
            %b Lesson quantity:
            = @event_group.service.event_quantity
          %p
            %b Total price:
            = @event_group.service.totalprice
          %p
            %b Lesson duration:
            = @event_group.service.event_length
          %p
            %b Attr1:
            = @event_group.attr1
          %p
            %b Attr2:
            = @event_group.attr2
          %p
            %b Attr3:
            = @event_group.attr3
          /%p
          /  %b Total attendances
          /  = @event_group.guests.count
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseTwo"}
            %b Group sales
      #collapseTwo.panel-collapse.collapse.in
        .panel-body
          /%tbody
          /  - @guests.each do |guest|
          /    %tr
          /      %td= guest
          /      /%td= guest.email

          /= link_to 'New Opportunity', new_admin_opportunity_path(event_group_id: @event_group.id), class: 'btn btn-xs btn-success'
          /%p
          %table#table1
            %thead
              %tr
                %th Client
                %th Responsible user
                %th Coupon
                %th Opp status
            %tbody
              - @opportunities.each do |opportunity|
                %tr
                  %td= link_to opportunity.guest, admin_guest_path(opportunity.guest), :style=>'color: blue;'
                  %td= link_to opportunity.user, admin_user_path(opportunity.user), :style=>'color: blue;'
                  %td= opportunity.coupon
                  %td= opportunity.opp_status

