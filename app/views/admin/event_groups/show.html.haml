- set_var 'events', @events.map{|e| {title: e.room.office.name  + " " + e.room.name + " " + e.user.to_s, start: e.starts_at, end: e.ends_at, url: edit_admin_event_path(e)}}
.col-md-4
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseOne"}
            %b Group info
      #collapseOne.panel-collapse.collapse.in
        .panel-body
          .text-center
            = link_to '', edit_admin_event_group_path(@event_group), class: 'btn2b'
            = link_to 'All groups', admin_event_groups_path, class: "btn btn-default"
          %p
            %b Group id:
            = @event_group.name
          %p
            %b Status:
            = @event_group.status
          %p
            %b Service:
            = @event_group.service
          %p
            %b Price of 1 lesson:
            = @event_group.service.gprice
          %p
            %b Lesson quantity:
            = @event_group.service.event_quantity
          %p
            %b Total price:
            = @event_group.service.totalprice
          %p
            %b Lesson duration:
            = @event_group.service.event_length
          %p
            %b Attr1:
            = @event_group.attr1
          %p
            %b Attr2:
            = @event_group.attr2
          %p
            %b Attr3:
            = @event_group.attr3
          .well
            %p
              %b Total attendances:
              = @event_group.attendances.count
            %p
              %b Clients registered:
              = @event_group.guests.count
            %p
              %b Total price of attendances:
              = @totalduepaymentguest

  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseTwo"}
            %b Group sales
      #collapseTwo.panel-collapse.collapse.in
        .panel-body
          %tbody
            - @guests.each do |guest|
              %tr
                %td= guest
                %td= guest.attendances.count
          /= link_to 'New sale', new_admin_sale_path(event_group_id: @event_group.id), class: 'btn btn-xs btn-success'
          %p
          %table#table1
            %thead
              %tr
                %th Client
                %th Responsible user
                %th Coupon
                %th Opp status
                %th Used
                %th Paid
                %th To pay
            %tbody
              - @sales.each do |sale|
                %tr
                  %td= link_to sale.guest, admin_guest_path(sale.guest), :style=>'color: blue;'
                  %td= link_to sale.user, admin_user_path(sale.user), :style=>'color: blue;'
                  %td= sale.coupon
                  %td= sale.opp_status
                  /%td= sale.guest.student_opport_event_group_pay
          /%tbody
          /  - @guests.each do |guest|
          /    %tr
          /      %td= guest
          /      %td= guest.total
.col-sm-8
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapseCal"}
            %b Group calendar
      #collapseCal.panel-collapse.collapse.in
        .panel-body
          %div#calendar
.row
.col-sm-6
  #accordion.panel-group
    .panel.panel-default
      .panel-heading
        %h4.panel-title
          %a.accordion-toggle{"data-toggle" => "collapse", :href => "#collapsePast"}
            %b Past events
      #collapsePast.panel-collapse.collapse.in
        .panel-body
          %table#table1
            %thead
              %tr
                %th Starts at
                %th Duration
                %th Room
                %th Responsible
                %th Edit event
            %tbody
              - @past_events.each do |event|
                %tr.bg-danger
                  %td= event.starts_at
                  %td= event.event_group.service.event_length
                  %td= event.room
                  %td= link_to event.user, admin_user_path(event.user), :style=>'color: blue;'
                  %td= link_to '', edit_admin_event_path(event), class: 'btn2edit'
                  %thead
                    %tr.bg-warning
                      %th Client
                      %th Attendance
                  %tbody
                  - event.attendances.each do |attendance|
                    %tr.bg-warning
                      %td= link_to attendance.guest, admin_guest_path(attendance.guest), :style=>'color: blue;'
                      %td= attendance.attendance_rate
                      %td= attendance.duepayment
