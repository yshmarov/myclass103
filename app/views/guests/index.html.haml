%p
#accordion.panel-group
  .panel.panel-default
    .panel-heading
      %h4.panel-title
        %b All clients
    .panel-collapse.collapse.in
      .panel-body
        = link_to 'New Client', new_guest_path, class: "btn btn-success add-button "
        %p
        %table#table1
          %thead
            %tr
              %th Email
              %th Name
              %th Name2
              %th Surname
              %th Bday
              %th Sex
              %th Address
              %th Photo
              %th Active?
              %th
              %th

          %tbody
            - @guests.each do |guest|
              %tr
                %td= guest.email
                %td= guest.first_name
                %td= guest.second_name
                %td= guest.last_name
                %td= guest.birthday
                %td= guest.sex
                %td= guest.address
                %td= guest.photo
                %td= guest.active
                %td= link_to '', guest, class: 'btn1search'
                %td= link_to '', edit_guest_path(guest), class: 'btn2edit'

%br
