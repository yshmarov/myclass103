%h1 Listing events

%table
  %thead
    %tr
      %th Starts at
      %th Duration
      %th Room
      %th User
      %th Event group

      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.starts_at
        %td= event.duration
        %td= event.room
        %td= event.user
        %td= event.event_group_id

        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, :method => :delete, :data => { :confirm => 'Are you sure?' }

