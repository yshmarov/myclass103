= simple_form_for @event_group do |f|
  = f.error_notification
  = f.button :submit, class: "btn btn-info add-button"
  %p
    .form-inputs
    .col-sm-4
      = f.input :name
    .col-sm-4
      = f.input :status, collection: [ "active", "forming", "finished"], selected: "forming"
    .col-sm-4
      /= f.association :service
      = f.association :service, collection: f.object.service_id ? Service.where('id = ? OR (is_active=1)', f.object.service_id) : Service.where(is_active: true)
    .col-sm-4
      = f.association :attr1
    .col-sm-4
      = f.association :attr2
    .col-sm-4
      = f.association :attr3

    %h3 Events
    #tasks
      = f.simple_fields_for :events do |event|
        = render 'event_fields', f: event
      .links.container
        = link_to_add_association '+ Add event', f, :events, class: "btn btn-info add-button"