= simple_form_for(@event_group) do |f|
  = f.error_notification

  .form-inputs

    = f.input :name

    = f.input :status, collection: [ "active", "forming", "finished"], selected: "forming"

    = f.input :service_id

    = f.association :attr1

    = f.association :attr2

    = f.association :attr3


  .form-actions
    = f.button :submit

  .h2 Events
  = f.fields_for :events do |p|
    .office_fields
      .field
        .bg-success
          = p.label :starts_at
        = p.datetime_select :starts_at, :minute_step => 15
        = p.label :duration
        = p.input :duration, collection: [45, 60, 75, 90, 105, 120]
        = p.label :user_id
        = p.text_field :user_id
        = p.label :room_id
        = p.text_field :room_id
        = p.check_box :_destroy
        = p.label :_destroy, 'remove'


  %h1 Listing  nested events

  = simple_form_for @event_group do |f|
    = f.simple_fields_for :events do |p|
      .bg-success
        = p.input :starts_at, :minute_step => 15
      = p.input :duration, collection: [45, 60, 75, 90, 105, 120]
      = p.association :user
      = p.association :room